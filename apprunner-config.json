{
  "ServiceName": "moltdao-api",
  "SourceConfiguration": {
    "CodeRepository": {
      "RepositoryUrl": "https://github.com/UltravioletaDAO/moltdao",
      "SourceCodeVersion": {
        "Type": "BRANCH",
        "Value": "main"
      },
      "CodeConfiguration": {
        "ConfigurationSource": "API",
        "CodeConfigurationValues": {
          "Runtime": "NODEJS_18",
          "BuildCommand": "npm install",
          "StartCommand": "node server/index.js",
          "Port": "3000",
          "RuntimeEnvironmentVariables": {
            "NODE_ENV": "production"
          }
        }
      }
    },
    "AutoDeploymentsEnabled": true
  },
  "InstanceConfiguration": {
    "Cpu": "0.25 vCPU",
    "Memory": "0.5 GB"
  },
  "HealthCheckConfiguration": {
    "Protocol": "HTTP",
    "Path": "/api/health",
    "Interval": 10,
    "Timeout": 5,
    "HealthyThreshold": 1,
    "UnhealthyThreshold": 5
  },
  "Tags": [
    {
      "Key": "Project",
      "Value": "MoltDAO"
    },
    {
      "Key": "Environment",
      "Value": "production"
    }
  ]
}
